                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:visibility="invisible">

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/weather_move1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/m1"
