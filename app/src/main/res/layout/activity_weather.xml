<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alllayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fffdf2"
    android:gravity="left"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/forecast_menu1_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@mipmap/yjjc_b_01"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/forecast_menu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日天气"
            android:textSize="@dimen/sp_18" />

        <LinearLayout
            android:id="@+id/forecast_shili_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>

    <!--内容-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/yjjc_b_02"
        android:gravity="left"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/today_yubao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left">
